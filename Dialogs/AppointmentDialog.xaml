<Window x:Class="ClinicManagementSystem.Dialogs.AppointmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="حجز موعد" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft" ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" Padding="20">
            <TextBlock Text="📅 حجز موعد جديد" FontSize="22" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30">
            <!-- Patient Selection -->
            <TextBlock Text="👤 المريض *" FontSize="14" FontWeight="Bold" Foreground="#555" Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbPatient" FontSize="14" Padding="10" Margin="0,0,0,20"
                      DisplayMemberPath="FullName" SelectedValuePath="PatientID"/>

            <!-- Date -->
            <TextBlock Text="📅 التاريخ *" FontSize="14" FontWeight="Bold" Foreground="#555" Margin="0,0,0,8"/>
            <DatePicker x:Name="dpDate" FontSize="14" Padding="10" Margin="0,0,0,20"/>

            <!-- Time -->
            <TextBlock Text="🕐 الوقت *" FontSize="14" FontWeight="Bold" Foreground="#555" Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbTime" FontSize="14" Padding="10" Margin="0,0,0,20">
                <ComboBoxItem Content="09:00"/>
                <ComboBoxItem Content="09:30"/>
                <ComboBoxItem Content="10:00"/>
                <ComboBoxItem Content="10:30"/>
                <ComboBoxItem Content="11:00"/>
                <ComboBoxItem Content="11:30"/>
                <ComboBoxItem Content="12:00"/>
                <ComboBoxItem Content="14:00"/>
                <ComboBoxItem Content="14:30"/>
                <ComboBoxItem Content="15:00"/>
                <ComboBoxItem Content="15:30"/>
                <ComboBoxItem Content="16:00"/>
                <ComboBoxItem Content="16:30"/>
                <ComboBoxItem Content="17:00"/>
            </ComboBox>

            <!-- Appointment Type -->
            <TextBlock Text="📋 نوع الموعد *" FontSize="14" FontWeight="Bold" Foreground="#555" Margin="0,0,0,8"/>
            <ComboBox x:Name="cmbType" FontSize="14" Padding="10" Margin="0,0,0,20">
                <ComboBoxItem Content="كشف" IsSelected="True"/>
                <ComboBoxItem Content="متابعة"/>
                <ComboBoxItem Content="استشارة"/>
            </ComboBox>

            <!-- Notes -->
            <TextBlock Text="📝 ملاحظات" FontSize="14" FontWeight="Bold" Foreground="#555" Margin="0,0,0,8"/>
            <TextBox x:Name="txtNotes" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" Padding="10"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="✅ حفظ" Background="#4CAF50" Foreground="White" BorderThickness="0"
                        Padding="30,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Save_Click"/>
                <Button Content="❌ إلغاء" Background="#F44336" Foreground="White" BorderThickness="0"
                        Padding="30,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>