<Window x:Class="ClinicManagementSystem.Dialogs.PrescriptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إنشاء روشتة طبية" Height="600" Width="700"
        WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <StackPanel>
                <TextBlock Text="💊 روشتة طبية" FontSize="22" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="txtPatientName" Text="المريض: ---" FontSize="14" Foreground="#E8F5E9" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="💊 الأدوية" FontSize="16" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Right"/>
                            <Button Content="➕ إضافة دواء" Background="#4CAF50" Foreground="White" BorderThickness="0"
                                    Padding="10,5" HorizontalAlignment="Left" Click="AddMedicine_Click"/>
                        </Grid>

                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="pnlMedicines">
                                <!-- Medicines will be added here dynamically -->
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Notes -->
                <Border Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📝 تعليمات عامة" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                        <TextBox x:Name="txtInstructions" Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" Padding="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="✅ حفظ وطباعة" Background="#4CAF50" Foreground="White" BorderThickness="0"
                        Padding="25,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Save_Click"/>
                <Button Content="❌ إلغاء" Background="#F44336" Foreground="White" BorderThickness="0"
                        Padding="25,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>