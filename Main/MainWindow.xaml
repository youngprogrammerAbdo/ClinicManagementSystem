<Window x:Class="ClinicManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="نظام إدارة العيادة" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        FlowDirection="RightToLeft"
        FontFamily="Segoe UI"
        FontSize="14">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="AccentColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="DangerColor" Color="#F44336"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="SidebarColor" Color="#1976D2"/>
        <SolidColorBrush x:Key="HoverColor" Color="#1565C0"/>

        <!-- Button Styles -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <StackPanel Grid.Row="0" Margin="20" Background="#1565C0">
                    <TextBlock Text="🏥 عيادة الشفاء" 
                              FontSize="22" 
                              FontWeight="Bold" 
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="نظام إدارة متكامل" 
                              FontSize="12" 
                              Foreground="#E3F2FD"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Dashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="لوحة التحكم" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Patients_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="المرضى" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Queue_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔢" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="نظام الدور" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Appointments_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="المواعيد" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Surgeries_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏥" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="العمليات" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Invoices_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="الفواتير" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Inventory_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="المخزون" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Reports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="التقارير" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Employees_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👔" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="الموظفين" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Click="Settings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="20" Margin="0,0,10,0"/>
                                <TextBlock Text="الإعدادات" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Info -->
                <Border Grid.Row="2" 
                        Background="#0D47A1" 
                        Padding="15"
                        Margin="10,10,10,20">
                    <StackPanel>
                        <TextBlock Text="👤 المستخدم" 
                                  Foreground="White" 
                                  FontWeight="Bold"
                                  FontSize="14"/>
                        <TextBlock x:Name="txtUsername" 
                                  Text="المدير العام" 
                                  Foreground="#E3F2FD"
                                  FontSize="12"
                                  Margin="0,5,0,0"/>
                        <Button Content="تسجيل الخروج" 
                               Background="#E53935"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="10,5"
                               Margin="0,10,0,0"
                               Cursor="Hand"
                               Click="Logout_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" 
                    Background="White" 
                    Padding="20,15"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="txtPageTitle" 
                                  Text="لوحة التحكم" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#333"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="📅" FontSize="18" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtCurrentDate" 
                                  Text="الأحد، 1 يناير 2025"
                                  FontSize="14"
                                  Foreground="#666"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Frame -->
            <Frame x:Name="MainFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden"
                   Margin="10"/>
        </Grid>
    </Grid>
</Window>