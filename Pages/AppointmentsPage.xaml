<Page x:Class="ClinicManagementSystem.Pages.AppointmentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FlowDirection="RightToLeft"
      Title="Appointments">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Calendar Side -->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="📅 المواعيد" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                    <Button Content="➕ حجز موعد جديد" Background="#4CAF50" Foreground="White" 
                            BorderThickness="0" Padding="15,10" Margin="0,15,0,0" FontSize="14" 
                            Cursor="Hand" Click="NewAppointment_Click"/>
                </StackPanel>
            </Border>

            <!-- Calendar -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                <Calendar x:Name="calendarView" SelectionMode="SingleDate" 
                          SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
            </Border>

            <!-- Stats -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="📊 الإحصائيات" FontSize="16" FontWeight="Bold" 
                               Foreground="#333" Margin="0,0,0,15"/>

                    <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="اليوم" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="txtTodayCount" Text="0 موعد" FontSize="18" 
                                       FontWeight="Bold" Foreground="#2196F3"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="هذا الأسبوع" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="txtWeekCount" Text="0 موعد" FontSize="18" 
                                       FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFEBEE" CornerRadius="5" Padding="10" Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="لم يحضر" FontSize="12" Foreground="#666"/>
                            <TextBlock x:Name="txtNoShowCount" Text="0" FontSize="18" 
                                       FontWeight="Bold" Foreground="#F44336"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Appointments List -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <StackPanel>
                        <TextBlock x:Name="txtSelectedDate" Text="مواعيد اليوم" FontSize="20" 
                                   FontWeight="Bold" Foreground="#333"/>
                        <TextBlock x:Name="txtAppointmentCount" Text="0 موعد" FontSize="14" 
                                   Foreground="#666" Margin="0,5,0,0"/>
                    </StackPanel>

                    <ComboBox x:Name="cmbStatusFilter" Width="150" HorizontalAlignment="Left" 
                              FontSize="14" SelectionChanged="StatusFilter_Changed">
                        <ComboBoxItem Content="جميع المواعيد" IsSelected="True"/>
                        <ComboBoxItem Content="محجوز"/>
                        <ComboBoxItem Content="حضر"/>
                        <ComboBoxItem Content="لم يحضر"/>
                        <ComboBoxItem Content="ملغي"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Appointments DataGrid -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20">
                <DataGrid x:Name="dgAppointments" AutoGenerateColumns="False" IsReadOnly="True"
                          GridLinesVisibility="None" HeadersVisibility="Column" Background="White"
                          RowBackground="#FAFAFA" AlternatingRowBackground="White" BorderThickness="0">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الوقت" Binding="{Binding AppointmentTime}" Width="80"/>
                        <DataGridTextColumn Header="المريض" Binding="{Binding PatientName}" Width="*"/>
                        <DataGridTextColumn Header="الهاتف" Binding="{Binding PhoneNumber}" Width="120"/>
                        <DataGridTextColumn Header="نوع الموعد" Binding="{Binding AppointmentType}" Width="100"/>

                        <DataGridTemplateColumn Header="الحالة" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="8,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="محجوز">
                                                        <Setter Property="Background" Value="#FFE082"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="حضر">
                                                        <Setter Property="Background" Value="#C8E6C9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="لم يحضر">
                                                        <Setter Property="Background" Value="#FFCDD2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="ملغي">
                                                        <Setter Property="Background" Value="#E0E0E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="الإجراءات" Width="220">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✅ حضر" Background="#4CAF50" Foreground="White"
                                                BorderThickness="0" Padding="8,4" Margin="2" FontSize="12"
                                                Cursor="Hand" Click="MarkAttended_Click" Tag="{Binding AppointmentID}"/>

                                        <Button Content="✏️ تعديل" Background="#2196F3" Foreground="White"
                                                BorderThickness="0" Padding="8,4" Margin="2" FontSize="12"
                                                Cursor="Hand" Click="EditAppointment_Click" Tag="{Binding AppointmentID}"/>

                                        <Button Content="❌ إلغاء" Background="#F44336" Foreground="White"
                                                BorderThickness="0" Padding="8,4" Margin="2" FontSize="12"
                                                Cursor="Hand" Click="CancelAppointment_Click" Tag="{Binding AppointmentID}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>