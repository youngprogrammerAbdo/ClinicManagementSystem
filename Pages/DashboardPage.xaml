<Page x:Class="ClinicManagementSystem.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      FlowDirection="RightToLeft"
      Title="Dashboard">

    <Page.Resources>
        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Section -->
            <Border Grid.Row="0" 
                    Background="White"
                    CornerRadius="10"
                    Padding="25"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="مرحباً بك في نظام إدارة العيادة" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#333"/>
                    <TextBlock x:Name="txtWelcomeMessage" 
                              Text="نتمنى لك يوم عمل موفق" 
                              FontSize="16"
                              Foreground="#666"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Statistics Cards -->
            <UniformGrid Grid.Row="1" Columns="4" Rows="1">
                <!-- Total Patients -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2196F3" Offset="0"/>
                            <GradientStop Color="#1976D2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="👥" FontSize="40" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="txtTotalPatients" 
                                  Text="0" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="إجمالي المرضى" 
                                  FontSize="16"
                                  Foreground="#E3F2FD"/>
                    </StackPanel>
                </Border>

                <!-- Today's Visits -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4CAF50" Offset="0"/>
                            <GradientStop Color="#388E3C" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="📋" FontSize="40" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="txtTodayVisits" 
                                  Text="0" 
                                  FontSize="42" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="زيارات اليوم" 
                                  FontSize="16"
                                  Foreground="#E8F5E9"/>
                    </StackPanel>
                </Border>

                <!-- Monthly Revenue -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF9800" Offset="0"/>
                            <GradientStop Color="#F57C00" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="💰" FontSize="40" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="txtMonthlyRevenue" 
                                  Text="0 جنيه" 
                                  FontSize="36" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="إيرادات الشهر" 
                                  FontSize="16"
                                  Foreground="#FFF3E0"/>
                    </StackPanel>
                </Border>

                <!-- Total Debts -->
                <Border Style="{StaticResource StatCardStyle}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F44336" Offset="0"/>
                            <GradientStop Color="#D32F2F" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <TextBlock Text="⚠️" FontSize="40" HorizontalAlignment="Right"/>
                        <TextBlock x:Name="txtTotalDebts" 
                                  Text="0 جنيه" 
                                  FontSize="36" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,10,0,0"/>
                        <TextBlock Text="إجمالي الديون" 
                                  FontSize="16"
                                  Foreground="#FFEBEE"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Quick Actions & Today's Queue -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Quick Actions -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <TextBlock Text="⚡ إجراءات سريعة" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#333"
                                  Margin="0,0,0,15"/>

                        <Button Content="➕ إضافة مريض جديد" 
                               Background="#2196F3"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="15,10"
                               Margin="0,5"
                               FontSize="14"
                               Cursor="Hand"
                               Click="AddPatient_Click"/>

                        <Button Content="📋 تسجيل كشف جديد" 
                               Background="#4CAF50"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="15,10"
                               Margin="0,5"
                               FontSize="14"
                               Cursor="Hand"
                               Click="NewVisit_Click"/>

                        <Button Content="💰 إنشاء فاتورة" 
                               Background="#FF9800"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="15,10"
                               Margin="0,5"
                               FontSize="14"
                               Cursor="Hand"
                               Click="NewInvoice_Click"/>

                        <Button Content="📅 حجز موعد" 
                               Background="#9C27B0"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="15,10"
                               Margin="0,5"
                               FontSize="14"
                               Cursor="Hand"
                               Click="NewAppointment_Click"/>

                        <Button Content="🔍 بحث عن مريض" 
                               Background="#00BCD4"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="15,10"
                               Margin="0,5"
                               FontSize="14"
                               Cursor="Hand"
                               Click="SearchPatient_Click"/>
                    </StackPanel>
                </Border>

                <!-- Today's Queue -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="🔢 دور اليوم" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="#333"
                                      HorizontalAlignment="Right"/>
                            <Button Content="عرض الكل ←" 
                                   Background="Transparent"
                                   Foreground="#2196F3"
                                   BorderThickness="0"
                                   HorizontalAlignment="Left"
                                   Cursor="Hand"
                                   Click="ViewAllQueue_Click"/>
                        </Grid>

                        <DataGrid x:Name="dgTodayQueue"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 GridLinesVisibility="None"
                                 HeadersVisibility="Column"
                                 Background="White"
                                 RowBackground="#FAFAFA"
                                 AlternatingRowBackground="White"
                                 BorderThickness="0"
                                 CanUserResizeColumns="False"
                                 SelectionMode="Single"
                                 Height="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="الدور" Binding="{Binding QueueNumber}" Width="60"/>
                                <DataGridTextColumn Header="اسم المريض" Binding="{Binding PatientName}" Width="*"/>
                                <DataGridTextColumn Header="نوع الكشف" Binding="{Binding VisitType}" Width="100"/>
                                <DataGridTextColumn Header="الحالة" Binding="{Binding VisitStatus}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Activities & Alerts -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Visits -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <TextBlock Text="📋 آخر الزيارات" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#333"
                                  Margin="0,0,0,15"/>

                        <DataGrid x:Name="dgRecentVisits"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 GridLinesVisibility="None"
                                 HeadersVisibility="Column"
                                 Background="White"
                                 RowBackground="#FAFAFA"
                                 AlternatingRowBackground="White"
                                 BorderThickness="0"
                                 Height="250">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="التاريخ" Binding="{Binding VisitDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="المريض" Binding="{Binding PatientName}" Width="*"/>
                                <DataGridTextColumn Header="التشخيص" Binding="{Binding Diagnosis}" Width="*"/>
                                <DataGridTextColumn Header="الحالة" Binding="{Binding VisitStatus}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Alerts & Notifications -->
                <Border Grid.Column="1" 
                        Background="White"
                        CornerRadius="10"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <TextBlock Text="🔔 التنبيهات" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#333"
                                  Margin="0,0,0,15"/>

                        <ScrollViewer Height="250" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="pnlAlerts">
                                <!-- سيتم ملئها برمجياً -->
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>