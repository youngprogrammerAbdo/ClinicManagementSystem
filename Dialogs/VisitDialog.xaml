<Window x:Class="ClinicManagementSystem.Dialogs.VisitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل زيارة جديدة" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <TextBlock Text="📋 تسجيل زيارة جديدة" FontSize="22" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- Patient Selection -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="👤 المريض *" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="cmbPatient" Grid.Column="0" FontSize="14" Padding="10" 
                                      DisplayMemberPath="FullName" SelectedValuePath="PatientID"
                                      SelectionChanged="Patient_SelectionChanged"/>

                            <Button Grid.Column="1" Content="🔍 بحث" Background="#2196F3" Foreground="White"
                                    BorderThickness="0" Padding="15,10" Margin="10,0,0,0" Click="SearchPatient_Click"/>
                        </Grid>

                        <!-- Patient Info -->
                        <Border x:Name="pnlPatientInfo" Background="#E3F2FD" CornerRadius="5" Padding="15" 
                                Margin="0,10,0,0" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock x:Name="txtPatientInfo" FontSize="13" Foreground="#1976D2" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Visit Details -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="نوع الزيارة *" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbVisitType" FontSize="14" Padding="10" SelectionChanged="VisitType_Changed">
                                <ComboBoxItem Content="كشف جديد" IsSelected="True"/>
                                <ComboBoxItem Content="إعادة"/>
                                <ComboBoxItem Content="متابعة"/>
                                <ComboBoxItem Content="طوارئ"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="رسوم الكشف *" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtExaminationFee" Text="200" FontSize="14" Padding="10"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Chief Complaint -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🗣️ الشكوى الرئيسية" FontSize="14" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                        <TextBox x:Name="txtChiefComplaint" Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" Padding="10"/>
                    </StackPanel>
                </Border>

                <!-- Diagnosis & Treatment -->
                <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="🔬 التشخيص" FontSize="14" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtDiagnosis" Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" Padding="10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="💊 العلاج" FontSize="14" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtTreatment" Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto" Padding="10"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Notes -->
                <Border Background="White" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="📝 ملاحظات" FontSize="14" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                        <TextBox x:Name="txtNotes" Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto" Padding="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="✅ حفظ وإضافة للدور" Background="#4CAF50" Foreground="White" BorderThickness="0"
                        Padding="25,12" FontSize="16" FontWeight="Bold" Margin="10,0" Cursor="Hand" Click="SaveAndAddToQueue_Click"/>

                <Button Content="💾 حفظ فقط" Background="#2196F3" Foreground="White" BorderThickness="0"
                        Padding="25,12" FontSize="16" FontWeight="Bold" Margin="10,0" Cursor="Hand" Click="Save_Click"/>

                <Button Content="❌ إلغاء" Background="#F44336" Foreground="White" BorderThickness="0"
                        Padding="25,12" FontSize="16" FontWeight="Bold" Margin="10,0" Cursor="Hand" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>