<Window x:Class="ClinicManagementSystem.Dialogs.AdvancedSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="بحث متقدم" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft" ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20">
            <TextBlock Text="🔍 بحث متقدم عن المرضى" FontSize="22" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Search Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30">
            <StackPanel>
                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📝 البيانات الأساسية" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                        <TextBlock Text="الاسم" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtName" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                        <TextBlock Text="رقم الهاتف" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPhone" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                        <TextBlock Text="الرقم القومي" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNationalID" FontSize="14" Padding="10"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="25" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📅 تاريخ التسجيل" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="من تاريخ" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <DatePicker x:Name="dpFromDate" FontSize="14" Padding="10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="إلى تاريخ" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <DatePicker x:Name="dpToDate" FontSize="14" Padding="10"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="25">
                    <StackPanel>
                        <TextBlock Text="🔧 خيارات إضافية" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="الجنس" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbGender" FontSize="14" Padding="10">
                                    <ComboBoxItem Content="الكل" IsSelected="True"/>
                                    <ComboBoxItem Content="ذكر"/>
                                    <ComboBoxItem Content="أنثى"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="فصيلة الدم" FontSize="14" Foreground="#555" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbBloodType" FontSize="14" Padding="10">
                                    <ComboBoxItem Content="الكل" IsSelected="True"/>
                                    <ComboBoxItem Content="A+"/>
                                    <ComboBoxItem Content="A-"/>
                                    <ComboBoxItem Content="B+"/>
                                    <ComboBoxItem Content="B-"/>
                                    <ComboBoxItem Content="AB+"/>
                                    <ComboBoxItem Content="AB-"/>
                                    <ComboBoxItem Content="O+"/>
                                    <ComboBoxItem Content="O-"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="🔍 بحث" Background="#4CAF50" Foreground="White" BorderThickness="0"
                        Padding="30,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Search_Click"/>
                <Button Content="🔄 إعادة تعيين" Background="#FF9800" Foreground="White" BorderThickness="0"
                        Padding="25,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Reset_Click"/>
                <Button Content="❌ إلغاء" Background="#F44336" Foreground="White" BorderThickness="0"
                        Padding="30,12" FontSize="16" FontWeight="Bold" Margin="10,0" 
                        Cursor="Hand" Click="Cancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>